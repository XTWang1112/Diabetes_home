{{!-- specify the CSS file --}}
<link rel="stylesheet" href="css/clinician_general.css" />
<link rel="stylesheet" href="css/clinician_dashboard.css" />


{{#each data}}

<div class="dashboard-patient-box">

    <div class="portfolio">
        <img class="patient-photo" src="img/profile-photo/{{this.photo_url}}" />
        <div class="name-and-gender">
            <button class="btn">
                <p class="name">{{this.patientName}}</p>
            </button>
            <p>{{this.gender}}</p>
        </div>
    </div>
    <table>
        <tr>
            <td>Blood glucose Level: </td>
            <td><span>
                {{#compare this.timestamp_blood_glucose_level}}
                    <span>{{this.today_blood_glucose_level}}</span>
                    </span> nmol/L
                {{else}}
                    <span>No data today</span>
                    </span>
                {{/compare}}
                {{!-- compare current time and the recorded time in database --}}
                {{!-- {{#if this.bloo_glucose_level}}
                    <span>{{this.today_blood_glucose_level}}</span>
                {{else}}
                    <span>没有数据</span>
                {{/if}} --}}
                </td>
        </tr>
        <tr>
            <td>Weight:</td>
            <td><span>
                {{#compare this.timestamp_weight}}
                    <span>{{this.today_weight}}</span>
                    </span> kg
                {{else}}
                    <span>No data today</span>
                    </span>
                {{/compare}}
                </td>
        </tr>
        <tr>
            <td>Insulin taken:</td>
            <td><span>
                {{#compare this.timestamp_insulin_taken}}
                    <span>{{this.today_insulin_taken}}</span>
                    </span> doses
                {{else}}
                    <span>No data today</span>
                    </span>
                {{/compare}}
                </td>
        </tr>
        <tr>
            <td>Exercise:</td>
            <td><span>
                {{#compare this.timestamp_exercise}}
                    <span>{{this.today_exercise}}</span>
                    </span> steps
                {{else}}
                    <span>No data today</span>
                    </span>
                {{/compare}}
            </td>
        </tr>
    </table>

</div>
{{/each}}

