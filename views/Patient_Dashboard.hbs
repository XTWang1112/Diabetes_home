<link rel='stylesheet' href='/css/patient_dashboard.css' />
<link rel='stylesheet' href='/css/patient_dashboard_queries.css' />
<script defer src='/script/patient_dashboard.js'></script>

<main class='main'>
  {{#with patient}}
    <nav class='main-nav-left'>
      <ul class='main-nav-left-list'>
        <div class='main-nav-left-shade'></div>
        <li class='svg-link'>
          <embed src='/img/svg/data-icon.svg' type='image/svg+xml' />
          <a
            class='main-nav-left-link'
            href='/patient/{{this._id}}/data'
          >Data</a>
        </li>
        <li class='svg-link'>
          <embed src='/img/svg/clinician-icon.svg' type='image/svg+xml' />
          <a
            class='main-nav-left-link'
            href='/patient/{{this._id}}/clinician'
          >Clinician</a>
        </li>
        <li class='svg-link home-li'>
          <embed src='/img/svg/home-icon.svg' type='image/svg+xml' />
          <a
            class='main-nav-left-link home-text'
            href='/patient/{{this._id}}'
          >Home</a>
        </li>
        <li class='svg-link'>
          <embed src='/img/svg/ranking-icon.svg' type='image/svg+xml' />
          <a
            class='main-nav-left-link'
            href='/patient/{{this._id}}/ranking'
          >Ranking</a>
        </li>
        <li class='svg-link'>
          <embed src='/img/svg/me-icon.svg' type='image/svg+xml' />
          <a class='main-nav-left-link' href='/patient/{{this._id}}/me'>Me</a>
        </li>
      </ul>
    </nav>
  {{/with}}

  <section class='record-div'>
    <div class='record-top'>
      <h1>Record</h1>
      <h2 class='record-date'></h2>
    </div>
    <div class='grid grid--2 record-grid'>
      <a
        class='record-box blood-box'
        href='/patient/{{patient._id}}/blood-glucose'
      >
        <embed
          class='blood-icon'
          src='/img/svg/blood-icon.svg'
          type='image/svg+xml'
        />
        <div>
          <p>Blood glucose level</p>
          <p class='time-series'>{{latestRecord.blood_glucose_level}}</p>
          <p>(in mmol/L)</p>
        </div>
        <div class='finish'>
          finish
        </div>
      </a>

      <a class='record-box weight-box' href='/patient/{{patient._id}}/weight'>
        <embed
          class='scale'
          src='/img/svg/weight-icon.svg'
          type='image/svg+xml'
        />
        <div>
          <p>Weight</p>
          <p class='time-series'>{{latestRecord.weight}}</p>
          <p>(in kg)</p>
        </div>
        <div class='finish'>
          finish
        </div>
      </a>

      <a class='record-box insulin-box' href='/patient/{{patient._id}}/insulin'>
        <embed
          class='needle'
          src='/img/svg/insulin-icon.svg'
          type='image/svg+xml'
        />
        <div>
          <p>Insulin taken</p>
          <p class='time-series'>{{latestRecord.insulinTaken}}</p>
          <p>(number of doses)</p>
        </div>
        <div class='finish'>
          finish
        </div>
      </a>

      <a
        class='record-box exercise-box'
        href='/patient/{{patient._id}}/exercise'
      >
        <embed class='step' src='/img/svg/step-icon.svg' type='image/svg+xml' />
        <div>
          <p>Exercise</p>
          <p class='time-series'>{{latestRecord.exercise}}</p>
          <p>(step count)</p>
        </div>
        <div class='finish'>
          finish
        </div>
      </a>
    </div>
  </section>

  <section class='comments-section'>
    <h1>Comments</h1>
    <div class='comments-div'>
      <div class='comments-box'>
        <button class='cross-button'>
          <ion-icon class='cross-button-icon' name='close-outline'></ion-icon>
        </button>
        <p>
          {{support_message}}
        </p>
      </div>
    </div>
  </section>
</main>